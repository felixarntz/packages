{
  "name": "@felixarntz/wp-plugins-cli",
  "version": "0.1.0",
  "description": "CLI with various tools for WordPress plugin maintenance",
  "license": "MIT",
  "type": "module",
  "bin": {
    "wp-plugins": "dist/wp-plugins-cli.js"
  },
  "main": "dist/wp-plugins-cli.cjs",
  "module": "dist/wp-plugins-cli.js",
  "types": "dist/wp-plugins-cli.d.ts",
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "homepage": "https://github.com/felixarntz/packages/blob/main/packages/wp-plugins-cli/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felixarntz/packages.git",
    "directory": "packages/wp-plugins-cli"
  },
  "bugs": {
    "url": "https://github.com/felixarntz/packages/issues"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^13.0.0",
    "@felixarntz/cli-utils": "workspace:^",
    "@octokit/rest": "^22.0.0",
    "commander": "^13.0.0",
    "dotenv": "^16.6.1",
    "fast-glob": "^3.3.3",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.3.3",
    "vitest": "^3.1.1"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --max-warnings 0",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run",
    "test:ci": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  }
}
