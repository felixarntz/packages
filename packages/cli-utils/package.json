{
  "name": "@felixarntz/cli-utils",
  "version": "0.1.1",
  "description": "Utility functions for TypeScript CLI tools, using Commander and Inquirer",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "homepage": "https://github.com/felixarntz/packages/blob/main/packages/cli-utils/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felixarntz/packages.git",
    "directory": "packages/cli-utils"
  },
  "bugs": {
    "url": "https://github.com/felixarntz/packages/issues"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^13.0.0",
    "@inquirer/prompts": "^7.10.0",
    "commander": "^13.0.0"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.3.3",
    "vitest": "^3.1.1"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --max-warnings 0",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run",
    "test:ci": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  }
}
